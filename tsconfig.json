{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "sourceMap": true,
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "lib": [
      "dom"
    ],
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/pages/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
